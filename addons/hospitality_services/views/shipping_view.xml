<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="hospitality_services.list">
      <field name="name">shipppping_services list</field>
      <field name="model">hospitality_services.shipping_service</field>
      <field name="arch" type="xml">
        <tree>
          <field name="to_name"/>
          <field name="to_address_line1"/>
          <field name="to_city"/>
          <field name="to_state"/>
          <field name="from_name"/>
          <field name="from_address_line1"/>
          <field name="from_city"/>
          <field name="from_state"/>
          <field name="cost"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="hospitality_services.action_window">
      <field name="name">Shipping_services</field>
      <field name="res_model">hospitality_services.shipping_service</field>
      <field name="view_mode">tree,form</field>
    </record>
   

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="hospitality_services.action_server">
      <field name="name">Shipping_services server</field>
      <field name="model_id" ref="model_hospitality_services_shipping_service"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
   

    <!-- Top menu item -->
    
    <menuitem name="Shipping Services" id="hospitality_services.menu_root"/>
   
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="hospitality_services.menu_1" parent="hospitality_services.menu_root"/>
    <menuitem name="Menu 2" id="hospitality_services.menu_2" parent="hospitality_services.menu_root"/>
   
    <!-- actions -->
    
    <menuitem name="List" id="hospitality_services.menu_1_list" parent="hospitality_services.menu_1"
              action="hospitality_services.action_window"/>
    <menuitem name="Server to list" id="hospitality_services" parent="hospitality_services.menu_2"
              action="hospitality_services.action_server"/>
   
  </data>
</odoo>